@page
@model RazorPages.Pages.Category.IndexModel


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-page="/Category/AddNewCategory" class="btn btn-primary">
                <i class="bi bi-plus-circle"> Create a new Category</i>
             </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.categoryList.OrderBy(u => u.DisplayOrder))
        {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.DisplayOrder</td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                     <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-2">
                          <i class="bi bi-trash"></i> Delete
                      </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>